{
  "manifest_version": 3,
  "name": "ExplainEasy",
  "description": "세대 간 소통 및 문해력 향상을 위한 GPT 기반 신조어, 한자어 표현 번역기",
  "version": "1.0",
  "permissions": ["activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/16p.png",
    "48": "icons/48p.png"
  }

}